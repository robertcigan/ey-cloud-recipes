passenger_root /usr/libexec/passenger;
passenger_spawn_method <%= @passenger_spawn_method %>;
passenger_max_pool_size <%= @passenger_max_pool_size %>;
passenger_max_instances_per_app <%= @passenger_max_instances_per_app %>;
passenger_pool_idle_time <%= @passenger_pool_idle_time %>;

passenger_user_switching on;
passenger_default_user <%= @user %>;
passenger_default_group <%= @user %>;

passenger_friendly_error_pages off;
passenger_log_level 0;
passenger_debug_log_file /var/log/engineyard/nginx/passenger.log;